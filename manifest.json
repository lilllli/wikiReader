{
  "manifest_version": 2,
  "default_locale": "en",
  "minimum_chrome_version": "33",

  "name": "WikiReader",
  "description": "Minimize Wikipedia",
  "version": "0.1",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "WikiReader"
  },

  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ],
    "persistent": false
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["http://*.wikipedia.org/*"],
      "css" : ["wiki/css.css"]
    }
  ],

  "web_accessible_resources": [
    "fonts/*.woff2"
  ],

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}
